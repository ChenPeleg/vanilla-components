{
  "name": "vanilla-elements",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./package/install.js",
  "bin":   "./package/install.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/**/*", "package/**/*", "scripts/**"
  ],
  "keywords": [
    "web components",
    "vanilla js",
    "custom elements",
    "ui components"
  ],
  "scripts": {
    "dev": "vite --mode development",
    "dev:package": "vite --mode package",
    "build": "tsc && vite build",
    "build:site": "tsc && vite build --site",
    "preview": "vite preview",
    "run-on-start": "node ./scripts/run-on-startup.js",
    "test" : "tsc  "
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.7",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "vite": "^7.0.0"
  },
  "web-types": "./web-types.json"
}
